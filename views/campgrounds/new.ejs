<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Enter new campsite</h1>
        <form action="/campgrounds" method="POST">
            <div style="width: 30%; margin:20px auto">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Campground name" name="name">
                </div>
                <div class="form-group">    
                    <input class="form-control" type="text" placeholder="image URL" name="image">
                </div>
                <div class="form-group">    
                    <input class="form-control" type="number" placeholder="Price" min="1.00" step="0.50" name="price">
                </div>
                <div class="form-group">    
                    <textarea class="form-control" placeholder="Campground description" name="description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
                <a href="/campgrounds">Go back</a>
            </div>
        </form>

        
    </div>
</div>
<% include ../partials/footer %>