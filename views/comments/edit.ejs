<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit Comment</h1>
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div style="width: 30%; margin:20px auto">
                <div class="form-group">    
                    <textarea class="form-control" placeholder="comment" name="comment[text]"><%=  comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
                <a href="/campgrounds">Go back</a>
            </div>
        </form>

        
    </div>
</div>
<% include ../partials/footer %>